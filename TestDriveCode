//Assigning Pins Left Motor (A) 
const int EN_A = 11;//speed
const int IN1_A = 22; //direction
const int IN2_A = 23; //direction

//Assigning Pins Right Motor (B)
const int EN_B = 12;//speed
const int IN1_B = 24; //direction
const int IN2_B = 25; //direction

void loop(){
  
}

void setDirection(bool forward, int motors) {
  switch (motors) {
    case 0: //both motors same
      {
        if (forward) {
          //left motor
          digitalWrite(IN1_A, LOW);
          digitalWrite(IN2_A, HIGH);
          //right motor
          digitalWrite(IN1_B, LOW);
          digitalWrite(IN2_B, HIGH);
        } else {
          //left motor
          digitalWrite(IN1_A, HIGH);
          digitalWrite(IN2_A, LOW);
          //right motor
          digitalWrite(IN1_B, HIGH);
          digitalWrite(IN2_B, LOW);
        }
        break;
      }
    case 1: //left turn
      {
        if (forward) {
          //left motor
          digitalWrite(IN1_A, HIGH);
          digitalWrite(IN2_A, LOW);
          //right
          digitalWrite(IN1_B, LOW);
          digitalWrite(IN2_B, HIGH);
        } else {
          //left motor
          digitalWrite(IN1_A, LOW);
          digitalWrite(IN2_A, HIGH);
          //right motor
          digitalWrite(IN1_B, HIGH);
          digitalWrite(IN2_B, LOW);
        }
        break;
      case 2: //right turn
        {
          if (forward) {
            //left motor
            digitalWrite(IN1_A, LOW);
            digitalWrite(IN2_A, HIGH);
            //right motor
            digitalWrite(IN1_B, HIGH);
            digitalWrite(IN2_B, LOW);
          } else {
            //left motor
            digitalWrite(IN1_A, HIGH);
            digitalWrite(IN2_A, LOW);
            //right motor
            digitalWrite(IN1_B, LOW);
            digitalWrite(IN2_B, HIGH);
          }
          break;
        }
      }
  }
}







